doctype html
html
    head
        title Loggerton

        link(rel="stylesheet" href="css/style.css")
        link(rel="stylesheet" href="css/pure/pure-min.css")
        body
            header
                h2 Welcome to my logger software

            select#select
                each channel in channels
                    option(value="#{channel.id}") #{channel.name}
                
            form#maker.pure-form(action="/channel/", method="post")
                input#newDBName(name="newDBName")
                button.pure-button create

            ul#messages
                each msg in messages
                    li #{msg.text}

            form#msg.pure-form(action="/channel/0", method="post")
                input#m(autocomplete="off", name="message")
                button.pure-button Send
            
            script(src="/socket.io/socket.io.js")
            script(src="http://code.jquery.com/jquery-1.11.1.js")

            script(type="text/javascript").

                $('#select').change(function() {
                    var select = e.options[e.selectedIndex].value;
                    
                    console.log('sending select with value: ' + select);
                    $('#messages li').remove();
                });